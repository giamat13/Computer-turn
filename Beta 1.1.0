<!DOCTYPE html>
<html lang="he">
<head>
<meta charset="UTF-8">
<title>ğŸ® ×ª×•×¨ ××©×—×§×™× â€“ ×¢× ×©×œ×™×˜×” ×—×›××”</title>
<style>
body {
    font-family: Arial, sans-serif;
    direction: rtl;
    text-align: center;
    margin: 0;
    padding: 0;
    background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
}
h1 { color: #fff; text-shadow: 2px 2px #000; }
.container {
    max-width: 600px;
    margin: 50px auto;
    padding: 20px;
    background: rgba(255,255,255,0.8);
    border-radius: 20px;
    box-shadow: 0 0 30px rgba(0,0,0,0.3);
}
input {
    padding: 10px;
    margin: 5px;
    border-radius: 10px;
    border: 2px solid #333;
    font-size: 16px;
}
button {
    padding: 10px 15px;
    margin: 5px;
    border-radius: 10px;
    border: none;
    font-size: 1.5em;
    cursor: pointer;
    transition: transform 0.2s;
}
button:hover { transform: scale(1.2); }
#queue {
    margin-top: 20px;
    text-align: right;
    background: rgba(0,0,0,0.1);
    padding: 10px;
    border-radius: 15px;
}
.child {
    padding: 5px;
    margin: 3px 0;
    border-radius: 10px;
    color: #fff;
    font-weight: bold;
    background: linear-gradient(90deg, #ff6a00, #ee0979);
}
#currentChild {
    font-weight: bold;
    margin-top: 20px;
    font-size: 1.5em;
    background: radial-gradient(circle, #00f, #0ff);
    color: #fff;
    padding: 15px;
    border-radius: 20px;
    text-shadow: 1px 1px #000;
}
#progressContainer {
    width: 100%;
    background: rgba(0,0,0,0.1);
    height: 20px;
    border-radius: 10px;
    margin-top: 10px;
    overflow: hidden;
}
#progressBar {
    height: 100%;
    width: 100%;
    background: green;
    transition: width 1s linear, background 0.5s linear;
}
#timeLeft {
    font-size: 1.2em;
    font-weight: bold;
    color: #ff0;
    text-shadow: 1px 1px #000;
}
.control-buttons {
    margin-top: 10px;
}
</style>
</head>
<body>

<h1>ğŸ® ×ª×•×¨ ××©×—×§×™× ğŸ‰</h1>

<div class="container">
    <div>
        <input type="text" id="childName" placeholder="×©× ×™×œ×“">
        <button onclick="addChild()">â•</button>
    </div>

    <div>
        <input type="number" id="timePerChild" placeholder="×–××Ÿ ×œ×›×œ ×™×œ×“ (×‘×“×§×•×ª)" min="1">
    </div>

    <div id="currentChild">×©×—×§×Ÿ × ×•×›×—×™: -</div>
    <div id="progressContainer">
        <div id="progressBar"></div>
    </div>
    <div>â±ï¸ ×–××Ÿ × ×•×ª×¨: <span id="timeLeft">--:--:--</span></div>

    <div class="control-buttons">
        <button id="pauseButton" onclick="togglePause()">â–¶ï¸</button>
        <button id="resetButton" onclick="resetTime()" style="display:none;">ğŸ”</button>
    </div>

    <h2>×ª×•×¨ ×”×™×œ×“×™×:</h2>
    <div id="queue"></div>
</div>

<script>
let queue = [];
let currentChild = null;
let timer = null;
let secondsLeft = 0;
let totalSeconds = 0;
let isPaused = true;
let canRestart = false;
let restartWindow = null;
let firstTurn = true; // ×“×’×œ ×œ×ª×•×¨ ×”×¨××©×•×Ÿ

// ×¦×œ×¦×•×œ×™×
const chromeBeep = new Audio('data:audio/wav;base64,UklGRiQAAABXQVZFZm10IBAAAAABAAEA...'); // ×¦×œ×¦×•×œ ×§×¦×¨ ×›×¨×•×
const externalBeep = new Audio('https://www.yo-yoo.co.il/tools/voices/images/uploads/eb1bc6.wav');

// ×”×©××¢×ª ×¦×œ×¦×•×œ
function playSound() {
    chromeBeep.play().catch(()=>{});
    externalBeep.play().catch(()=>{});
}

// ×”×•×¡×¤×ª ×™×œ×“
function addChild() {
    const name = document.getElementById("childName").value.trim();
    if (name) {
        queue.push(name);
        document.getElementById("childName").value = "";
        updateQueueDisplay();
    }
}

document.getElementById("childName").addEventListener("keydown", e => {
    if (e.key === "Enter") addChild();
});
document.getElementById("timePerChild").addEventListener("keydown", e => {
    if (e.key === "Enter") startGame();
});

// ×¢×“×›×•×Ÿ ×ª×•×¨
function updateQueueDisplay() {
    const queueDiv = document.getElementById("queue");
    queueDiv.innerHTML = "";
    queue.forEach((child, index) => {
        const div = document.createElement("div");
        div.className = "child";
        div.textContent = `${index + 1}. ${child}`;
        queueDiv.appendChild(div);
    });
}

// ×”×ª×—×œ×ª ××©×—×§
function startGame() {
    const time = parseInt(document.getElementById("timePerChild").value);
    if (queue.length === 0) return alert("××™×Ÿ ×™×œ×“×™× ×‘×ª×•×¨!");
    if (isNaN(time) || time <= 0) return alert("×× × ×”×–×Ÿ ×–××Ÿ ×—×•×§×™!");
    if (!currentChild) nextChild(time);
}

// ××¢×‘×¨ ×œ×™×œ×“ ×”×‘×
function nextChild(time) {
    clearInterval(timer);
    clearTimeout(restartWindow);
    document.getElementById("resetButton").style.display = "none";

    if (queue.length === 0) {
        document.getElementById("currentChild").textContent = "×›×•×œ× ×¡×™×™××• ×œ×©×—×§!";
        document.getElementById("timeLeft").textContent = "--:--:--";
        document.getElementById("progressBar").style.width = "100%";
        document.getElementById("progressBar").style.background = "green";
        isPaused = true;
        document.getElementById("pauseButton").textContent = "â–¶ï¸";
        playSound(); // ×¦×œ×¦×•×œ ×¡×™×•×
        return;
    }

    if (!firstTurn) playSound(); // ×¦×œ×¦×•×œ ××¢×‘×¨ ×ª×•×¨, ×œ× ×‘×ª×—×™×œ×ª ×”×™×œ×“ ×”×¨××©×•×Ÿ
    firstTurn = false;

    currentChild = queue.shift();
    document.getElementById("currentChild").textContent = "×©×—×§×Ÿ × ×•×›×—×™: " + currentChild;
    updateQueueDisplay();

    totalSeconds = secondsLeft = time * 60;
    isPaused = true;
    canRestart = true;

    document.getElementById("pauseButton").textContent = "â–¶ï¸";
    document.getElementById("timeLeft").textContent = formatTime(secondsLeft);

    restartWindow = setTimeout(() => {
        canRestart = false;
        document.getElementById("resetButton").style.display = "none";
    }, 60000);

    // ğŸ” ×ª××™×“ ×‘×“×§×” ×”×¨××©×•× ×”
    document.getElementById("resetButton").style.display = "inline-block";
}

// ×˜×™×™××¨
function startTimer() {
    clearInterval(timer);
    document.getElementById("pauseButton").textContent = "â¸ï¸";
    isPaused = false;

    timer = setInterval(() => {
        if (!isPaused) {
            secondsLeft--;
            document.getElementById("timeLeft").textContent = formatTime(secondsLeft);
            const percent = (secondsLeft / totalSeconds) * 100;
            document.getElementById("progressBar").style.width = percent + "%";

            let r, g;
            if (percent > 50) {
                r = Math.floor(255 * (1 - (percent - 50) / 50));
                g = 255;
            } else {
                r = 255;
                g = Math.floor(255 * (percent / 50));
            }
            document.getElementById("progressBar").style.background = `rgb(${r},${g},0)`;

            if (secondsLeft <= 0) {
                clearInterval(timer);
                nextChild(totalSeconds / 60);
            }
        }
    }, 1000);
}

// ×”×©×”×” / ×”×¤×¢×œ×”
function togglePause() {
    if (!currentChild) return;
    isPaused = !isPaused;

    if (!isPaused) {
        document.getElementById("pauseButton").textContent = "â¸ï¸";
        startTimer();
    } else {
        document.getElementById("pauseButton").textContent = "â–¶ï¸";
    }
}

// ××™×¤×•×¡ ×–××Ÿ (×¨×§ ×‘×“×§×” ×”×¨××©×•× ×”)
function resetTime() {
    if (!canRestart) return;
    secondsLeft = totalSeconds;
    document.getElementById("timeLeft").textContent = formatTime(secondsLeft);
    document.getElementById("progressBar").style.width = "100%";
    document.getElementById("progressBar").style.background = "green";
}

// ×¢×™×¦×•×‘ ×–××Ÿ
function formatTime(totalSeconds) {
    const h = Math.floor(totalSeconds / 3600);
    const m = Math.floor((totalSeconds % 3600) / 60);
    const s = totalSeconds % 60;
    return [h, m, s].map(x => String(x).padStart(2, '0')).join(':');
}
</script>

</body>
</html>
